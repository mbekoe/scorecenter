<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!-- Note to skinner:
 The two main controls are the listcontrol (ID = 10) and the textboxscrollup (ID = 20).
 The score result itself is created dynamically with labels. the textboxscrollup is used to define
 the area (posX, posY, width and height) where to create the control
 and how to format them (font and color).
-->
<window>
  <id>42000</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <import>common.time.xml</import>

    <!-- backdrop matching current sport -->
    <control>
      <description>backdrop</description>
      <type>image</type>
      <id>30</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>768</height>
      <texture>#ScoreCenter.bd.jpg</texture>
      <colordiffuse>60ffffff</colordiffuse>
      <animation effect="fade" time="400">WindowClose</animation>
      <animation effect="fade" time="400">WindowOpen</animation>
    </control>
    <!--
    <control>
      <description>BackGround</description>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <width>1366</width>
      <height>768</height>
      <dimColor>aaffffff</dimColor>
      <texture>chrome_bg85%.png</texture>
    </control>
    -->
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>290</width>
      <height>768</height>
      <texture>menu_slide_background.png</texture>
      <animation effect="slide" time="10" end="-300,0">WindowClose</animation>
      <animation effect="slide" time="10" end="-300,0">WindowClose</animation>
    </control>

	<!--
    <control>
      <description>Image</description>
      <type>image</type>
      <posX>20</posX>
      <posY>370</posY>
      <texture>hover_score center.png</texture>
      <keepaspectratio>yes</keepaspectratio>
    </control>
	-->
    <control>
      <type>fadelabel</type>
      <description>Title</description>
      <posX>1340</posX>
      <posY>10</posY>
      <width>500</width>
      <label>#ScoreCenter.Title</label>
      <font>font18</font>
      <textcolor>aaffffff</textcolor>
      <align>right</align>
    </control>
    
    <control>
      <description>Current Category</description>
      <type>image</type>
      <posX>10</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.CatIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <description>Current League Image</description>
      <type>image</type>
      <posX>70</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.LIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <description>Current Score Image</description>
      <type>image</type>
      <posX>130</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.ScoreIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>

	<!--
    <control>
      <description>Current Category</description>
      <type>label</type>
      <posX>10</posX>
      <posY>70</posY>
      <label>#ScoreCenter.Category</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
    <control>
      <description>Current League</description>
      <type>label</type>
      <posX>10</posX>
      <posY>100</posY>
      <label>#ScoreCenter.League</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
	-->
    <control>
      <description>Current Results</description>
      <type>label</type>
      <posX>300</posX>
      <posY>50</posY>
      <width>900</width>
      <label>#ScoreCenter.Results</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>

    <control>
      <type>fadelabel</type>
      <description>source</description>
      <posX>300</posX>
      <posY>75</posY>
      <width>900</width>
      <label>#ScoreCenter.Source</label>
      <font>font10</font>
      <textcolor>aaffffff</textcolor>
      <align>left</align>
    </control>
    
    <control>
      <description>Scores</description>
      <type>listcontrol</type>
      <id>10</id>
      <posX>10</posX>
      <posY>100</posY>
      <width>280</width>
      <height>610</height>
      <textXOff>10</textXOff>
      <textYOff>2</textYOff>
      <IconXOff>5</IconXOff>
      <IconYOff>5</IconYOff>
      <textvisible2>no</textvisible2>
      <textvisible3>no</textvisible3>
      <spaceBetweenItems>2</spaceBetweenItems>
      <textureHeight>35</textureHeight>
      <keepaspectratio>yes</keepaspectratio>
      <spinPosX>10</spinPosX>
      <spinPosY>650</spinPosY>
      <textcolor>ffffffff</textcolor>
      <onright>40</onright>
    </control>

	<!-- This control defines the area and the format (font and color)
	in which the score will be displayed -->
    <control>
      <description>Results</description>
      <type>textboxscrollup</type>
      <id>20</id>
      <posX>300</posX>
      <posY>100</posY>
      <visible>yes</visible>
      <width>1060</width>
      <height>640</height>
      <font>font14</font>
    </control>

    <control>
      <description>Next Button</description>
      <type>button</type>
      <id>40</id>
      <posX>200</posX>
      <posY>670</posY>
      <width>100</width>
      <label>Next</label>
      <onup>10</onup>
      <ondown>10</ondown>
    </control>

    <!-- Uncomment this control to make the list 
    disapear when a score is displayed -->
    <!--
    <control>
      <description>Dummy Label</description>
      <type>label</type>
      <id>50</id>
      <posX>-100</posX>
      <posY>10</posY>
      <width>10</width>
      <label>dummy</label>
      <font>font12</font>
    </control>
    -->

  </controls>
</window>