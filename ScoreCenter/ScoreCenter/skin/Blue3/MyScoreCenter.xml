<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>42000</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <import>common.time.xml</import>
    <control>
      <description>BackGround</description>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <width>720</width>
      <height>576</height>
      <texture>background.png</texture>
    </control>

	<!-- backdrop matching current sport -->
    <control>
      <description>backdrop</description>
      <type>image</type>
      <id>30</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>720</width>
      <height>576</height>
      <texture>#ScoreCenter.bd.jpg</texture>
      <colordiffuse>500000FF</colordiffuse>
      <animation effect="fade" time="400">WindowClose</animation>
      <animation effect="fade" time="400">WindowOpen</animation>
    </control>

    <control>
      <type>fadelabel</type>
      <description>Title</description>
      <posX>680</posX>
      <posY>5</posY>
      <width>500</width>
      <label>#ScoreCenter.Title</label>
      <font>font18</font>
      <textcolor>aaffffff</textcolor>
      <align>right</align>
      <texture>ScoreCenter\Football.png</texture>
    </control>
    
    <control>
      <description>Current Category</description>
      <type>image</type>
      <posX>10</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.CatIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <description>Current League Image</description>
      <type>image</type>
      <posX>70</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.LIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <description>Current Score Image</description>
      <type>image</type>
      <posX>130</posX>
      <posY>50</posY>
      <width>50</width>
      <height>50</height>
      <texture>#ScoreCenter.ScoreIco</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>

	<!--
    <control>
      <description>Current Category</description>
      <type>label</type>
      <posX>10</posX>
      <posY>70</posY>
      <label>#ScoreCenter.Category</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
    <control>
      <description>Current League</description>
      <type>label</type>
      <posX>10</posX>
      <posY>100</posY>
      <label>#ScoreCenter.League</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
	-->
    <control>
      <description>Current Results</description>
      <type>label</type>
      <posX>230</posX>
      <posY>50</posY>
      <label>#ScoreCenter.Results</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
    </control>
    
    <control>
      <description>Scores</description>
      <type>listcontrol</type>
      <id>10</id>
      <posX>10</posX>
      <posY>100</posY>
      <width>200</width>
      <height>450</height>
      <textXOff>10</textXOff>
      <textYOff>2</textYOff>
      <IconXOff>5</IconXOff>
      <IconYOff>5</IconYOff>
      <textvisible2>no</textvisible2>
      <textvisible3>no</textvisible3>
      <spaceBetweenItems>2</spaceBetweenItems>
      <textureHeight>35</textureHeight>
      <keepaspectratio>yes</keepaspectratio>
      <spinPosX>10</spinPosX>
      <spinPosY>550</spinPosY>
      <onright>40</onright>
    </control>

    <control>
      <description>Results</description>
      <type>textboxscrollup</type>
      <id>20</id>
      <posX>210</posX>
      <posY>100</posY>
      <visible>yes</visible>
      <width>520</width>
      <height>440</height>
      <font>font11</font>
    </control>

    <control>
      <description>Next Button</description>
      <type>button</type>
      <id>40</id>
      <posX>140</posX>
      <posY>540</posY>
      <width>70</width>
      <label>Next</label>
      <onup>10</onup>
      <ondown>10</ondown>
    </control>

  </controls>
</window>