    <control>
      <description>Current Results</description>
      <type>label</type>
      <posX>450</posX>
      <posY>155</posY>
      <label>#ScoreCenter.Results</label>
      <font>font16B</font>
      <align>left</align>
      <textcolor>lightskyblue</textcolor>
    </control>
    
    <control>
      <description>Scores</description>
      <type>listcontrol</type>
      <id>10</id>
      <posX>60</posX>
      <posY>155</posY>
      <width>320</width>
      <height>500</height>
      <textXOff>10</textXOff>
      <textYOff>2</textYOff>
      <IconXOff>5</IconXOff>
      <IconYOff>5</IconYOff>
      <textvisible2>no</textvisible2>
      <textvisible3>no</textvisible3>
      <spaceBetweenItems>2</spaceBetweenItems>
      <textureHeight>35</textureHeight>
      <keepaspectratio>yes</keepaspectratio>
      <spinPosX>10</spinPosX>
      <spinPosY>650</spinPosY>
      <onright>40</onright>
    </control>

    <control>
      <description>Results</description>
      <type>textboxscrollup</type>
      <id>20</id>
      <posX>450</posX>
      <posY>195</posY>
      <visible>yes</visible>
      <width>900</width>
      <height>600</height>
      <font>font11</font>
    </control>

    <control>
      <description>Next Button</description>
      <type>button</type>
      <id>40</id>
      <posX>200</posX>
      <posY>650</posY>
      <width>100</width>
      <label>Next</label>
      <onup>10</onup>
      <ondown>10</ondown>
    </control>

